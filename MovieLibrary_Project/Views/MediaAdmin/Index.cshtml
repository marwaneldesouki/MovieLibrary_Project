@{
	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model IEnumerable<MovieLibrary_Project.Models.Media>
<div class="container">
	<h1 class="my-4">Media Library Dashboard</h1>

	<a class="btn btn-primary mb-3" href="@Url.Action("Create")">
		<i class="bi bi-plus-circle"></i> Add New Media
	</a>

	<table class="table table-hover">
		<thead class="thead-light">
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Rating</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var media in Model)
			{
				<tr>
					<td>@media.Title</td>
					<td>@media.Description</td>
					<td>@media.Rating</td>
					<td>
						<a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = media.Id })">
							<i class="bi bi-eye"></i> Details
						</a>
						<a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = media.Id })">
							<i class="bi bi-pencil"></i> Edit
						</a>
						<form asp-action="Delete" asp-route-id="@media.Id" method="post" style="display:inline;">
							<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this media?');">Delete</button>
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

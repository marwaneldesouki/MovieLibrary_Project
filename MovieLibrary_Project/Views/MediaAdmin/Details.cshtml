@model MovieLibrary_Project.Models.Media
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="container">
    <h1 class="my-4">@Model.Title</h1>
    <p>@Model.Description</p>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.PosterPath" alt="@Model.Title" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <p><strong>Director:</strong> @Model.Director</p>
            <p><strong>Writer:</strong> @Model.Writer</p>
            <p><strong>Rating:</strong> @Model.Rating</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
        </div>
    </div>

    @if (!Model.IsMovie)
    {
        <h2>Seasons</h2>
        <ul class="list-group">
            @foreach (var season in Model.Seasons)
            {
                <li class="list-group-item">
                    Season @season.SeasonNumber - @season.Episodes.Count episodes
                </li>
            }
        </ul>
    }

    <a class="btn btn-secondary mt-3" href="@Url.Action("Index")">Back to List</a>
</div>
